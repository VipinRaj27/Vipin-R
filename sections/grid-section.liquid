<div class="container2">
  <h3 class="heading">Tisso Vison in the Wild</h3>
  <div class="products">
    <!-- First Product Grid -->
    <div class="product-grid">
      <div class="product">
        {% if section.settings.image_1 != blank %}
          <img src="{{ section.settings.image_1 | img_url: 'large' }}" alt="Product 1">
          <div class="icon" onclick="openPopup('Tailored Jacket', '980,00€', '{{ section.settings.image_1 | img_url: 'small' }}', 'White', 'Black')">+</div>
        {% endif %}
      </div>
      <div class="product">
        {% if section.settings.image_2 != blank %}
          <img src="{{ section.settings.image_2 | img_url: 'large' }}" alt="Product 2">
          <div class="icon" onclick="openPopup('Leather Jacket', '450,00€', '{{ section.settings.image_2 | img_url: 'large' }}', 'Blue', 'Black')">+</div>
        {% endif %}
      </div>
      <div class="product">
        {% if section.settings.image_3 != blank %}
          <img src="{{ section.settings.image_3 | img_url: 'large' }}" alt="Product 3">
          <div class="icon" onclick="openPopup('Plaid Shirt', '75,00€', '{{ section.settings.image_3 | img_url: 'large' }}', 'Red', 'Grey')">+</div>
        {% endif %}
      </div>
    </div>

    <!-- Second Product Grid -->
    <div class="product-grid">
      <div class="product">
        {% if section.settings.image_4 != blank %}
          <img src="{{ section.settings.image_4 | img_url: 'large' }}" alt="Product 4">
          <div class="icon" onclick="openPopup('Green Trench Coat', '980,00€', '{{ section.settings.image_4 | img_url: 'large' }}', 'White', 'Black')">+</div>
        {% endif %}
      </div>
      <div class="product">
        {% if section.settings.image_5 != blank %}
          <img src="{{ section.settings.image_5 | img_url: 'large' }}" alt="Product 5">
          <div class="icon" onclick="openPopup('Tennis Blue T-Shirt', '980,00€', '{{ section.settings.image_5 | img_url: 'large' }}', 'Grey', 'Black')">+</div>
        {% endif %}
      </div>
      <div class="product">
        {% if section.settings.image_6 != blank %}
          <img src="{{ section.settings.image_6 | img_url: 'large' }}" alt="Product 6">
          <div class="icon" onclick="openPopup('Long Sleeve Tennis Top', '980,00€', '{{ section.settings.image_6 | img_url: 'large' }}', 'Blue', 'Black')">+</div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Popup Section -->
  <div class="popup-overlay" id="popup">
    <div class="popup-content">
      <div class="closediv">
        <span class="close-btn" onclick="closePopup()">×</span>
      </div>
      <div class="imagedescription">
        <div>
          <img id="product-image" src="" alt="Product Image" />
        </div>
        <div class="productDescription">
          <p id="product-title">Product Name</p>
          <p id="product-price">Price</p>
          <p class="product-description">
            This one-piece swimsuit is crafted from jersey featuring an allover micro Monogram motif in relief.
          </p>
        </div>
      </div>
      <div class="color-options">
        <div><span>Color:</span></div>
        <div class="colordiv">
          <div id="color1div"><span></span></div>
          <div class="color-box" id="color1" onclick="selectedColor1()"></div>
          <div id="color2div"><span></span></div>
          <div class="color-box" id="color2" onclick="selectedColor2()"></div>
        </div>
      </div>
      <div class="sizediv">
        <label for="size">Size:</label>
        <select id="size">
          <option value="" selected disabled hidden>Choose your size</option>
          <option>XS</option>
          <option>S</option>
          <option>M</option>
          <option>L</option>
          <option>XL</option>
        </select>
      </div>
      <br>
      <button class="add-to-cart">Add to Cart → </button>
    </div>
  </div>
</div>

